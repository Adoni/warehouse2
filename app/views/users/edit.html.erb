<%=render 'layouts/header'%>
<div class="container">
  <div class="row">
  <div class="span6 offset3">
  <%=form_for @user, html: {class: "form-horizontal"} do |f|%>
  <%=render 'layouts/error_messages', object: f.object%>
    <div class="control-group">
      <%=f.label :password, "姓名", class: "control-label"%>
      <div class="controls">
        <%=f.text_field :name, value: @user.name, readonly: "readonly"%>
      </div>
    </div>
    
    <div class="control-group">
      <%=f.label :password, "密码", class: "control-label"%>
      <div class="controls">
        <%=f.password_field :password%>
      </div>
    </div>

    <div class="control-group">
      <%=f.label :password_confirmation, "重复密码", class: "control-label"%>
      <div class="controls">
        <%=f.password_field :password_confirmation%>
      </div>
    </div>
    
    <div class="control-group">
      <div class="controls">
        <%=f.submit "修改密码", class: "btn btn-primary"%>
      </div>
    </div>
  <%end%>
  </div>
  </div>
</div>
